-# Lead - Image, title and buttons
.jumbotron
  .container-fluid
    -# milion stories logo
    %p.text-center.text-lowercase
      %small milion stories
    -# title image
    = image_tag(story.header_image, class: 'img-responsive', alt: 'Title image')
    -# lead title
    %h1.text-center.text-uppercase= story.name
    -# navigation buttons for article
    .col-md-8.col-md-offset-2
      .row
        .col-md-3
          %a.btn.btn-default.btn-block.text-lowercase{:href => "#story", :role => ""} story
        .col-md-3
          %a.btn.btn-default.btn-block.text-lowercase{:href => "#pictures", :role => "button"} pictures
        .col-md-3
          %a.btn.btn-default.btn-block.text-lowercase{:href => "#advice", :role => "button"} advice
        .col-md-3
          %a.btn.btn-default.btn-block.text-lowercase{:href => "#map", :role => "button"} map

-# Main column and side menu
.container-fluid

  -# Main column
  .col-md-10
    -# name of section - Story
    %h1#story.text-center.text-uppercase story
    -# date
    %p.text-center.text-lowercase
      %small= story.created_at
    -# Story - text part 1
    - story.story_text.each do |key, value|
      / Story text
      %div
        %p= value
      / Pictures for story
      .row
        - for j in 1..3 do
          .col-md-4
            = image_tag("malta-article-photo-0#{j}.jpg",  class: 'img-responsive', alt: 'Title image')

    - story.pictures.each do |pic|
      %p= pic.title


    -# Social media items
    = render 'socialmedia_icons'

    -# name of section - Pictures
    %h1#pictures.text-center.text-uppercase pictures
    -# date
    %p.text-center.text-lowercase
      %small 12.10.2014
    .row
      - for i in 1..9 do
        .col-md-4
          = image_tag('malta-photoblog-01.jpg', class: 'img-responsive img-thumbnail', alt:"#{i}")

    / Social media items
    = render 'socialmedia_icons'

    -# name of section - Map
    %h1#map.text-center.text-uppercase map
    -# date
    %p.text-center.text-lowercase
      %small= story.created_at
    .col-md-12
      %img.img-responsive{:alt => "title image", :src => "images/malta-map.jpg"}/

    -# Social media items
    = render 'socialmedia_icons'

    -# name of section - Advice
    %h1#advice.text-center.text-uppercase advice
    -# date
    %p.text-center.text-lowercase
      %small= story.updated_at
    -# Advice - text
    %div
      %p= story.advice
    -# Pictures for story
    .row
      - for j in 1..3 do
        .col-md-4
          = image_tag("malta-article-photo-0#{j}.jpg",  class: 'img-responsive', alt: 'Title image')
    -# Social media items
    = render 'socialmedia_icons'


  -# Right Column - Menu
  = render 'shared/rightmenu'