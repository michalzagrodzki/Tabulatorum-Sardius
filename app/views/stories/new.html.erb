<% if user_signed_in? %>
  <div class="container">
    <div class='col-md-12'>
      <h1 class="text-center">Create Story</h1>
      <%= link_to(_back_url) do %>
        <button class='btn btn-default btn-block' role='button'>Go back</button>
      <% end %>
      <br>
      <h3 class="text-center">Main Page Section</h3>
      <p class="text-center"> Here you add elements which will be visible on Front Page</p>
        <div class="row">
          <div class="col-md-offset-2">
            <div class="col-md-6">
              <%= simple_form_for story do |f| %>
                <%= f.input :name %>
                <%= f.input :main_page_image %>
            </div>
            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('MainPageHint.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>
          </div>

        </div>
    </div>

    <div class='col-md-12'>
      <h3 class="text-center">Story Page Section</h3>
      <p class="text-center"> Here you add elements which will be visible on Story Page</p>
        <div class="row">
          <div class="col-md-offset-2">
            <div class="col-md-6">
              <%= f.input :header_image %>
            </div>
            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('HeaderStory.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

    <div class='col-md-12'>
      <h3 class="text-center">Chapter Section</h3>
      <p class="text-center"> Here you add chapters to story</p>
        <div class="row">
          <div class="col-md-offset-2">
            <div class="col-md-6">
              <%= f.fields_for story.chapters.build do |chapter_form| %>
                <%= chapter_form.input :text, as: :text %>
              <% end %>
            </div>
            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('Chapter1Story.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

    <div class='col-md-12'>
      <h3 class="text-center">Advice Section</h3>
      <p class="text-center"> Here you add advice to story</p>
      <div class="row">
        <div class="col-md-offset-2">
          <div class="col-md-6">
            <%= f.fields_for story.advices.build do |advice_form| %>
              <%= advice_form.input :text, as: :text %>
            <% end %>
          </div>
          <div class="col-md-4">
            <div class="thumbnail">
              <%= image_tag('AdviceStory.png') %>
              <div class="caption">
                <h3 class="text-center"></h3>
                <p></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class='col-md-12'>
      <h3 class="text-center">Picture Section</h3>
      <p class="text-center"> Here you chose which pictures will be shown in story</p>
    </div>
    <div class="col-md-offset-4">
      <div class='col-md-4'>
        <%= f.button :submit %>
        <% end %>
      </div>
    </div>

  </div>

<% end %>