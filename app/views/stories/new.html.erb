<% if user_signed_in? %>
  <div class="container">
    <div class='col-md-12'>
      <h1 class="text-center">Create Story</h1>
      <%= link_to(root_path) do %>
        <button class='btn btn-default btn-block' role='button'>Go back</button>
      <% end %>
      <br>

      <h3 class="text-center">Main Page Section</h3>
      <p class="text-center"> Here you add elements which will be visible on Front Page</p>

        <div class="row">
          <div class="col-md-offset-2">

            <div class="col-md-6">
              <%= simple_form_for story do |f| %>
                <%= f.input :name, label: 'Name of story please', hint: 'Field above must be filled.' %>
                <%= f.input :main_page_image, placeholder: 'user@domain.com' %>
                <%= f.input :latitude, hint: 'Put only numbers and comas.', placeholder: 'data for google maps' %>
                <%= f.input :longitude, hint: 'Put only numbers and comas.',placeholder: 'data for google maps' %>
            </div>

            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('MainPageHint.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>

          </div>

        </div>
    </div>

    <div class='col-md-12'>
      <h3 class="text-center">Story Page Section</h3>
      <p class="text-center"> Here you add elements which will be visible on Story Page</p>
        <div class="row">
          <div class="col-md-offset-2">

            <div class="col-md-6">
              <%= f.input :header_image %>
            </div>

            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('HeaderStory.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>

          </div>
        </div>

    </div>

    <div class='col-md-12'>

      <h3 class="text-center">Chapter Section</h3>
      <p class="text-center"> Here you add chapters to story</p>

        <div class="row">
          <div class="col-md-offset-2">

            <div class="col-md-6">
              <%= f.fields_for :chapters do |chapter_form| %>
                <%= chapter_form.input :text, as: :text %>
              <% end %>
            </div>

            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('Chapter1Story.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>

          </div>
        </div>
    </div>

    <div class='col-md-12'>

      <h3 class="text-center">Advice Section</h3>
      <p class="text-center"> Here you add advice to story</p>

      <div class="row">
        <div class="col-md-offset-2">

          <div class="col-md-6">
            <%= f.fields_for :advices do |advice_form| %>
              <%= advice_form.input :text, as: :text %>
            <% end %>
          </div>

          <div class="col-md-4">
            <div class="thumbnail">
              <%= image_tag('AdviceStory.png') %>
              <div class="caption">
                <h3 class="text-center"></h3>
                <p></p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class='col-md-12'>
      <h3 class="text-center">Picture Section</h3>
      <p class="text-center"> Here you add pictures linked to that Story</p>
      <div class="row">
        <%= f.fields_for :pictures do |picture_form| %>

          <div class="col-md-4">

            <div class="panel panel-default">
              <div class="panel-body">
                <%= picture_form.input :title, label: 'Name of picture please', hint: 'Field above must be filled.' %>
                <%= picture_form.input :link, placeholder: 'user@domain.com', hint: 'Field above must be filled.' %>
                <%= picture_form.input :location, placeholder: 'user@domain.com' %>
                <%= picture_form.input :latitude, hint: 'Put only numbers and comas.', placeholder: 'data for google maps' %>
                <%= picture_form.input :longitude, hint: 'Put only numbers and comas.',placeholder: 'data for google maps' %>
              </div>
            </div>

          </div>

        <% end %>
      </div>

    </div>
    <div class="col-md-offset-3">
      <div class='col-md-8'>
        <%= f.button :submit, 'Create Story Now!', class: 'btn btn-block' %>
        <% end %>
        <br>
        <br>
        <br>
      </div>
    </div>

  </div>

<% end %>