<!-- Lead - Image, title and buttons -->
<div class='jumbotron'>

  <div class='container-fluid'>
    <!-- milion stories logo -->
    <p class='text-center text-lowercase'><small>milion stories</small></p>
    <!-- title image -->
    <%= image_tag(story.header_image, class: 'img-responsive', alt: 'Title image') %>
    <!-- lead title -->
    <h1 class='text-center text-uppercase'><%= story.name %></h1>

    <!-- navigation buttons for article -->
    <div class='col-md-8 col-md-offset-2'>
      <div class='row'>
        <div class='col-md-3'>
          <a class='btn btn-default btn-block text-lowercase' href='#story' role=''>story</a>
        </div>
        <div class='col-md-3'>
          <a class='btn btn-default btn-block text-lowercase' href='#pictures' role='button'>pictures</a>
        </div>
        <div class='col-md-3'>
          <a class='btn btn-default btn-block text-lowercase' href='#advice' role='button'>advice</a>
        </div>
        <div class='col-md-3'>
          <a class='btn btn-default btn-block text-lowercase' href='#map' role='button'>map</a>
        </div>
      </div>
    </div>

  </div>

</div>
<!-- /jumbotron -->

<!-- Main column and side menu -->
<div class='container-fluid'>
  <!-- Main column -->
  <div class='col-md-10'>

    <!-- name of section - Story -->
    <h1 class='text-center text-uppercase' id="story">story</h1>
    <!-- date -->
    <p class='text-center text-lowercase'><small><%= story.created_at %></small></p>

    <!-- Story - text part 1 -->
    <% story.story_text.each do |key, value| %>
        <!-- Story text -->
        <div>
          <p><%= value %></p>
        </div>

        <!-- Pictures for story -->
        <div class='row'>
          <% for j in 1..3 do %>
              <div class='col-md-4'>
                <%= image_tag("malta-article-photo-0#{j}.jpg",  class: 'img-responsive', alt: 'Title image') %>
              </div>
          <% end %>

        </div>

    <% end %>

    <!-- Social media items -->
        <%= render 'socialmedia_icons' %>
    <!-- /Social media items -->

    <!-- /name of section - Story -->

    <!-- name of section - Pictures -->
    <h1 class='text-center text-uppercase' id="pictures" >pictures</h1>
    <!-- date -->
    <p class='text-center text-lowercase'><small>12.10.2014</small></p>

    <div class='row'>
      <% story.pictures.each do |picture| %>
          <div class='col-md-4'>
            <%= link_in_image(picture.link, story_pictures_path(story), {class: 'img-responsive img-thumbnail', alt:""}) %>
          </div>
      <% end %>
    </div>

    <!-- Social media items -->
        <%= render 'socialmedia_icons' %>
    <!-- /Social media items -->

    <!-- /name of section - Pictures -->

    <!-- name of section - Map -->
    <h1 class='text-center text-uppercase' id="map">map</h1>
    <!-- date -->
    <p class='text-center text-lowercase'><small><%= story.created_at %></small></p>

    <div class='col-md-12'>
      <img src='images/malta-map.jpg' class='img-responsive' alt='title image'>
    </div>

    <!-- Social media items -->
        <%= render 'socialmedia_icons' %>
    <!-- /Social media items -->
    <!-- /name of section - Map -->

    <!-- name of section - Advice -->
    <h1 class='text-center text-uppercase' id="advice">advice</h1>
    <!-- date -->
    <p class='text-center text-lowercase'><small><%= story.updated_at %></small></p>

    <!-- Advice - text -->
    <div>
      <p><%= story.advice %></p>
    </div>

    <!-- Pictures for story -->
    <div class='row'>
      <% for j in 1..3 do %>
          <div class='col-md-4'>
            <%= image_tag("malta-article-photo-0#{j}.jpg",  class: 'img-responsive', alt: 'Title image') %>
          </div>
      <% end %>
    </div>

    <!-- Social media items -->
        <%= render 'socialmedia_icons' %>
    <!-- /Social media items -->
    <!-- /name of section - Advice -->

  </div>
  <!-- /Main column -->

  <!-- Right Column - Menu -->
  <%= render 'shared/rightmenu' %>
  <!-- /Right Column - Menu -->

</div>