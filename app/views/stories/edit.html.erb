<% if user_signed_in? %>
  <div class="container-fluid">
    <br>
    <div class='col-md-12'>
      <div class="panel panel-default">
        <div class="panel-heading">
        <h1 class="text-center">Edit Story</h1>
          <div class="col-md-4 col-md-offset-4">
            <%= link_to(_back_url) do %>
              <button class='btn btn-default btn-block' role='button'>Go back</button>
            <% end %>
          </div>
          <br>
          <br>
          <p class="text-center">Here you edit head elements of story.</p>
          <p class="text-center">Change title, images for Front Page and for header of Story.</p>
        </div>
      <div class="panel-body">

      <div class="panel panel-default">
        <div class="panel-body">
        <h3 class="text-center">Main Page Section</h3>
        <p class="text-center">Here you edit elements which will be visible on Front Page</p>
        <br>
          <div class="row">
          <div class="col-md-offset-2">

            <div class="col-md-6">
              <%= simple_form_for story do |f| %>
                <%= f.input :name, label: 'Title of story', hint: 'Field above must be filled.' %>
                <%= f.input :main_page_image, label: 'Link to picture on server', hint: 'Field above must be filled. This picture will be visible only on Front Page.'%>
                <hr/>
                <%= f.input :latitude, label: 'Latitude of story',  hint: 'Put only numbers and comas.' %>
                <%= f.input :longitude, label: 'Latitude of story',  hint: 'Put only numbers and comas.' %>
            </div>

            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('MainPageHint.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>

          </div>

        </div>

        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
        <h3 class="text-center">Story Page Section</h3>
        <p class="text-center">Here you edit element which will be visible on Story Page</p>

        <div class="row">
          <div class="col-md-offset-2">
            <div class="col-md-6">
              <%= f.input :header_image, label: 'Header Image',  hint: 'Link to picture on server' %>
            </div>

            <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag('HeaderStory.png') %>
                <div class="caption">
                  <h3 class="text-center"></h3>
                  <p></p>
                </div>
              </div>
            </div>

          </div>
        </div>

        </div>
      </div>

    </div>

    <div class="panel-footer">
      <%= f.button :submit, 'Publish changes.', class: 'btn btn-lg btn-block' %>
      <% end %>
    </div>

    </div>
    <br>
    <br>
  </div>
  </div>
<% end %>