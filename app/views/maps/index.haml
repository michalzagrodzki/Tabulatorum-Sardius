- content_for :head_title do "Maps of our travel stories."

- content_for :head_maps do
  -# Script for loading Google Maps API
  %script{:src => "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry", :type => "text/javascript"}
  -# Script for loading Marker Cluster
  %script{:src => "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", :type => "text/javascript"}
  -# Script for loading Rich Marker
  %script{:src => "//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js", :type => "text/javascript"}
  -# Script for loading Infobox
  %script{:src => "//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js", :type => "text/javascript"}

.container
  .row
    / Left column - maps section
    = render 'leftmenu_maps'
    / /Left column - maps section
    / Right Column - Menu
    = render 'shared/rightmenu'

- content_for :footer_maps do
