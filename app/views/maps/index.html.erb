<% content_for :head_title do %>
    "Maps of our travel stories."
<% end %>

<% content_for :head_maps do %>
    <!-- Script for loading Google Maps API -->
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <!-- Script for loading Marker Cluster -->
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <!-- Script for loading Rich Marker-->
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
    <!-- Script for loading Infobox -->
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>
<% end %>

<div class='container'>
  <div class="row">

    <!-- Left column - about us section -->
    <div class='col-md-10 '>
      <div class='thumbnail'>

    <!-- Google Maps Canvas -->

      <div id="map" style='width: 920px; height: 900px;'></div>
      </div>

    </div>

    <!-- /Left column - about us section -->

    <!-- Right Column - Menu -->
    <div class='col-md-2'>
      <!-- Title -->
      <%= link_to(welcome_index_path) do  %>
          <div class='sidebar-module'>
            <h2 class='text-center'>Million Stories</h2>
          </div>
      <% end %>
      <!-- /Title -->

      <!-- Search and Stories Module -->
      <div class='sidebar-module'>
        <ul class='list-unstyled'>
          <li>
            <a class='btn btn-default btn-block' href='#' role='button'>Search</a>
          </li>
          <li>
            <a class='btn btn-default btn-block' href='#' role='button'>Stories</a>
          </li>
        </ul>
      </div>
      <hr>
      <!-- /Search and Stories Module -->

      <!-- Stories Tags -->
      <div class='sidebar-module'>
        <div class='row'>

          <!-- 1st row -->
          <div class='col-md-12'>
            <div class='btn-group' role='group'>
              <a class='btn btn-default btn-sm' href='#' role='button'>Hike</a>
              <a class='btn btn-default btn-sm' href='#' role='button'>City</a>
              <a class='btn btn-default btn-sm' href='#' role='button'>Museum</a>
            </div>
          </div>
          <!-- /1st row -->

          <!-- 2nd row -->
          <div class='col-md-12'>
            <div class='btn-group' role='group'>
              <a class='btn btn-default btn-sm' href='#' role='button'>Trail</a>
              <a class='btn btn-default btn-sm' href='#' role='button'>Eat</a>
              <a class='btn btn-default btn-sm' href='#' role='button'>Relax</a>
            </div>
          </div>
          <!-- /2nd row -->

        </div>
      </div>
      <hr>
      <!-- /Stories Tags -->

      <!-- Map and counter module -->
      <div class='sidebar-module'>
        <ul class='list-unstyled'>
          <li>
            <button class='btn btn-default btn-block active' role='button'>Map</button>
          </li>
          <li>
            <a class='btn btn-default btn-block' href='#' role='button'>Counter</a>
          </li>
        </ul>
      </div>
      <hr>
      <!-- /Map and counter module -->

      <!-- Contact module -->
      <div class='sidebar-module'>
        <ul class='list-unstyled'>
          <%= link_to(about_us_index_path) do %>
              <li>
                <button class='btn btn-default btn-block' role='button'>About</button>
              </li>
          <% end %>
          <%= link_to(contact_url) do %>
              <li>
                <button class='btn btn-default btn-block' role='button'>Contact</button>
              </li>
          <% end %>
        </ul>
      </div>
      <hr>
      <!-- /Contact module -->

      <!-- Social Media Links -->
      <div class='sidebar-module'>
        <div class='row'>

          <!-- 1st row -->
          <div class='col-md-4'>
            <a class='btn btn-default' href='#' role='button'>1</a>
          </div>
          <div class='col-md-4'>
            <a class='btn btn-default' href='#' role='button'>2</a>
          </div>
          <div class='col-md-4'>
            <a class='btn btn-default' href='#' role='button'>3</a>
          </div>

          <!-- 2nd row -->
          <div class='col-md-4'>
            <a class='btn btn-default' href='#' role='button'>4</a>
          </div>
          <div class='col-md-4'>
            <a class='btn btn-default' href='#' role='button'>5</a>
          </div>
          <div class='col-md-4'>
            <a class='btn btn-default' href='#' role='button'>6</a>
          </div>
        </div>
      </div>
      <hr>
      <!-- /Social Media Links -->

      <!-- Copyright module -->
      <div class='sidebar-module'>
        <div class='col-md-12'>
          <div>
            <p class='text-center'>Copyright</p>
            <p class='text-center'>Anna Huk</p>
            <p class='text-center'>and</p>
            <p class='text-center'>Michal Zagrodzki</p>
          </div>
        </div>
      </div>
      <!-- /Copyright module -->

      </div>
      <!-- /Right Column - Menu -->
  </div>
  <!-- /row-->

</div>
<!-- /container-->

</body>
<!-- END OF BODY -->

<!-- Loading data to Google maps from controller, through 'buildMap', to coffeescript file -->
<script type="text/javascript">
    // variable buildMap - stored in stories.coffee
    buildMap(<%=raw @hash.to_json %>);
</script>

</html>
