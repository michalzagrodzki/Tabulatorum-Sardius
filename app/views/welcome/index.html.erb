<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- Title Specific Meta -->
  <title>Milion Stories</title>
  <meta name="description" content="Webpage about our travel stories.">
  <meta name="author" content="Anna Huk and Michal Zagrodzki">

  <!-- Mobile Specific Meta -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <!-- Stylesheets
  <link rel="stylesheet" href="css/bootstrap.min.css" />
  <link rel="stylesheet" href="css/style.css" /> -->

  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js></script>
    <![endif]-->

  <!-- Favicon and Apple Icons
  <link rel="shortcut icon" href="images/icon/favicon.ico">
  <link rel="apple-touch-icon" href="images/icon/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="72x72" href="images/icon/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="114x114" href="images/icon/apple-touch-icon-114x114.png"> -->

  <!-- WHEN FONTS WILL BE LOADED, CHOOSE SVG AS FIRST ONE ! IT WILL RENDER PROPERLY IN CHROME -->

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Script for loading Google Maps API -->
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <!-- Script for loading Marker Cluster -->
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <!-- Script for loading Rich Marker-->
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
  <!-- Script for loading Infobox -->
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>

</head>

<!-- BEGINNING OF BODY -->

<body>

<div class='container'>
  <div class='row'>

    <!-- Left Column - Images -->
    <div class='col-md-10'>
      <!-- Story loop -->
      <% @stories.each do |story| %>
      <!-- Story Thumbnail of <%= story.name %>-->
      <div class='col-md-4'>
        <!-- Link to story-->
        <%= link_to(story) do %>
          <div class='thumbnail'>
            <!-- Image of story -->
            <%= image_tag('malta-story-thumbnail.jpg', alt: 'Thumbnail image') %>
            <div class='caption'>
              <!-- Title of story-->
              <h3 class='text-center'><%= story.name %></h3>
              <!-- Date of last update of story -->
              <p class='text-center'><%= story.updated_at.strftime("%e.%m.%Y") %></p>
            </div>
          </div>
        <% end %>
      </div>
      <!-- /Story Thumbnail of <%= story.name %> -->
      <% end %>

      <!-- Button for next stories -->
      <div class='col-md-12'>
        <a class='btn btn-default btn-block disabled' href='#' role='button'>Load more stories</a>
      </div>
      <!-- /Button for next stories -->

    </div>
    <!-- /Left Column - Images -->

  <!-- Right Column - Menu -->
  <div class='col-md-2'>
    <!-- Title -->
    <%= link_to(welcome_index_path) do  %>
    <div class='sidebar-module'>
      <h2 class='text-center'>Million Stories</h2>
    </div>
    <% end %>
    <!-- /Title -->

    <!-- Search and Stories Module -->
    <div class='sidebar-module'>
      <ul class='list-unstyled'>
        <li>
          <a class='btn btn-default btn-block disabled' href='#' role='button'>Search</a>
        </li>
        <li>
          <a class='btn btn-default btn-block disabled' href='#' role='button'>Stories</a>
        </li>
      </ul>
    </div>
    <hr>
    <!-- /Search and Stories Module -->

    <!-- Stories Tags -->
    <div class='sidebar-module'>
      <div class='row'>

        <!-- 1st row -->
        <div class='col-md-12'>
          <div class='btn-group' role='group'>
            <a class='btn btn-default btn-sm disabled' href='#' role='button'>Hike</a>
            <a class='btn btn-default btn-sm disabled' href='#' role='button'>City</a>
            <a class='btn btn-default btn-sm disabled' href='#' role='button'>Museum</a>
          </div>
        </div>
        <!-- /1st row -->

        <!-- 2nd row -->
        <div class='col-md-12'>
          <div class='btn-group' role='group'>
            <a class='btn btn-default btn-sm disabled' href='#' role='button'>Trail</a>
            <a class='btn btn-default btn-sm disabled' href='#' role='button'>Eat</a>
            <a class='btn btn-default btn-sm disabled' href='#' role='button'>Relax</a>
          </div>
        </div>
        <!-- /2nd row -->

      </div>
    </div>
    <hr>
    <!-- /Stories Tags -->

    <!-- Map and counter module -->
    <div class='sidebar-module'>
      <ul class='list-unstyled'>
        <li>
          <a class='btn btn-default btn-block' href='#' role='button'>Map</a>
        </li>
        <li>
          <a class='btn btn-default btn-block disabled' href='#' role='button'>Counter</a>
        </li>
      </ul>
    </div>
    <hr>
    <!-- /Map and counter module -->

    <!-- Contact module -->
    <div class='sidebar-module'>
      <ul class='list-unstyled'>
        <%= link_to(about_us_index_path) do %>
        <li>
          <button class='btn btn-default btn-block' role='button'>About</button>
        </li>
        <% end %>
        <%= link_to(contact_url) do %>
        <li>
          <button class='btn btn-default btn-block' role='button'>Contact</button>
        </li>
        <% end %>
      </ul>
    </div>
    <hr>
    <!-- /Contact module -->

    <!-- Social Media Links -->
    <div class='sidebar-module'>
      <div class='row'>

        <!-- 1st row -->
        <div class='col-md-4'>
          <a class='btn btn-default disabled' href='#' role='button'>1</a>
        </div>
        <div class='col-md-4'>
          <a class='btn btn-default disabled' href='#' role='button'>2</a>
        </div>
        <div class='col-md-4'>
          <a class='btn btn-default disabled' href='#' role='button'>3</a>
        </div>

        <!-- 2nd row -->
        <div class='col-md-4'>
          <a class='btn btn-default disabled' href='#' role='button'>4</a>
        </div>
        <div class='col-md-4'>
          <a class='btn btn-default disabled' href='#' role='button'>5</a>
        </div>
        <div class='col-md-4'>
          <a class='btn btn-default disabled' href='#' role='button'>6</a>
        </div>
      </div>
    </div>
    <hr>
    <!-- /Social Media Links -->

    <!-- Copyright module -->
    <div class='sidebar-module'>
      <div class='col-md-12'>
        <div>
          <p class='text-center'>Copyright</p>
          <p class='text-center'>Anna Huk</p>
          <p class='text-center'>and</p>
          <p class='text-center'>Michal Zagrodzki</p>
        </div>
      </div>
    </div>
    <!-- /Copyright module -->

  </div>
  <!-- /Right Column - Menu -->

  </div>
  <!-- /row-->

</div>
<!-- /container-->

</body>
<!-- END OF BODY -->

</html>



